<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llFeatureOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch feature on/off"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Switch
            android:id="@+id/switchMasterShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOwnEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llFeatureOn"
        android:text="Email: not registered"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/tvCertValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOwnEmail"
        android:text="Certificate valid until: N/A"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/btnRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCertValidity"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginBottom="8dp" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:id="@+id/vLsdSpacer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btnRegistration"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />


    <!-- Share own location with Section -->
    <LinearLayout
        android:id="@+id/llShareWithFromHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vLsdSpacer"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/tvShareWithLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share location with/from ..."
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnAddPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add person to share with" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollShareWithFrom"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/llShareWithFromHeader"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/layoutShareWithFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
